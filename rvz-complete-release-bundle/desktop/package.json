{
  "name": "rvz-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist:win": "electron-builder --win --x64 --publish never",
    "dist:mac": "electron-builder --mac --x64 --publish never",
    "dist": "electron-builder --mac --win --x64 --publish never"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "co.rvzgroup.travel",
    "productName": "RVZ Travel Suite",
    "files": ["**/*", "../frontend/out/**"],
    "mac": { "target": ["dmg","zip"], "identity": "Developer ID Application: YOUR NAME (TEAMID)" },
    "win": { "target": ["nsis","appx"] }
  }
}
