{
  "name": "rvz-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "co.rvzgroup.travel",
    "productName": "RVZ Travel Suite",
    "files": ["**/*", "../frontend/out/**"],
    "mac": {
      "target": ["dmg","zip"],
      "identity": "Developer ID Application: YOUR NAME (TEAMID)"
    },
    "win": {
      "target": ["nsis","appx"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false
    },
    "publish": [ { "provider": "github", "owner": "YOUR_GITHUB_ORG", "repo": "YOUR_REPO" } ]
  }
}
